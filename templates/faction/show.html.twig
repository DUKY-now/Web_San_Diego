{% extends 'base.html.twig' %}

{% block title %}{{ faction.name }} - Project San Diego{% endblock %}

{% block body %}
<h1>{{ faction.nom }}</h1>
<p>{{ faction.Lore }}</p>

<p><strong>Membres:</strong> {{ faction.membres }}</p>

<div class="cards">
    {% for img in faction.images %}
        <img src="{{ asset('images/' ~ img) }}" alt="{{ faction.name }}" style="width:200px; margin:10px;">
    {% endfor %}
</div>

<a href="{{ path('app_faction') }}">← Retour à la liste des factions</a>
{% endblock %}
