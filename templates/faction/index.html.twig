{% extends 'base.html.twig' %}

{% block title %}Factions - Project San Diego{% endblock %}

{% block body %}
   <link rel="stylesheet" href="{{ asset('css/faction.css') }}">

<h1>Factions disponibles</h1>

<div class="cards">
    {% for faction in factions %}
        <div class="faction-card">
        <h2>{{ faction.nom }}</h2>
        <p>{{ faction.lore |slice(0, 100) ~ '...' }}</p>
        <p><strong>Membres:</strong> {{ faction.membres }}</p>
            <a href="{{ path('app_faction_show', {'slug': faction.slug}) }}">Voir plus
                <img src="{{ asset('images/Factions/' ~ faction.slug ~ '.png') }}" alt="{{ faction.nom }}">
                </a>
            {# <p>{{ faction.short_lore }}</p> #}
        </div>
    {% endfor %}
</div>
{% endblock %}

